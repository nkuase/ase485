<?xml version="1.0"?>
<rdf:RDF xmlns="http://example.org/food#"
     xml:base="http://example.org/food"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#">
    
    <!-- Ontology Declaration -->
    <owl:Ontology rdf:about="http://example.org/food">
        <rdfs:comment>Food Safety Ontology - demonstrating inference about unsafe food</rdfs:comment>
    </owl:Ontology>
    
    <!-- ============================================ -->
    <!-- CLASSES (Concepts/Vocabulary) -->
    <!-- ============================================ -->
    
    <!-- Main class: Food -->
    <owl:Class rdf:about="http://example.org/food#Food">
        <rdfs:label>Food</rdfs:label>
        <rdfs:comment>Something a person can eat</rdfs:comment>
    </owl:Class>
    
    <!-- Subclass: Mushroom -->
    <owl:Class rdf:about="http://example.org/food#Mushroom">
        <rdfs:subClassOf rdf:resource="http://example.org/food#Food"/>
        <rdfs:label>Mushroom</rdfs:label>
        <rdfs:comment>A type of food that can be poisonous</rdfs:comment>
    </owl:Class>
    
    <!-- Subclass: Meat -->
    <owl:Class rdf:about="http://example.org/food#Meat">
        <rdfs:subClassOf rdf:resource="http://example.org/food#Food"/>
        <rdfs:label>Meat</rdfs:label>
        <rdfs:comment>A type of food that can become smelly</rdfs:comment>
    </owl:Class>
    
    <!-- Safety status classes -->
    <owl:Class rdf:about="http://example.org/food#SafeFood">
        <rdfs:subClassOf rdf:resource="http://example.org/food#Food"/>
        <owl:disjointWith rdf:resource="http://example.org/food#UnsafeFood"/>
        <rdfs:label>Safe Food</rdfs:label>
        <rdfs:comment>Food that is OK to eat</rdfs:comment>
    </owl:Class>
    
    <owl:Class rdf:about="http://example.org/food#UnsafeFood">
        <rdfs:subClassOf rdf:resource="http://example.org/food#Food"/>
        <rdfs:label>Unsafe Food</rdfs:label>
        <rdfs:comment>Food that is NOT OK to eat</rdfs:comment>
    </owl:Class>
    
    <!-- ============================================ -->
    <!-- PROPERTIES (Relations) -->
    <!-- ============================================ -->
    
    <!-- Property: isPoisonous -->
    <owl:DatatypeProperty rdf:about="http://example.org/food#isPoisonous">
        <rdfs:domain rdf:resource="http://example.org/food#Food"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#boolean"/>
        <rdfs:label>is poisonous</rdfs:label>
        <rdfs:comment>Indicates whether the food contains poison</rdfs:comment>
    </owl:DatatypeProperty>
    
    <!-- Property: isSmelly -->
    <owl:DatatypeProperty rdf:about="http://example.org/food#isSmelly">
        <rdfs:domain rdf:resource="http://example.org/food#Food"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#boolean"/>
        <rdfs:label>is smelly</rdfs:label>
        <rdfs:comment>Indicates whether the food has a bad smell</rdfs:comment>
    </owl:DatatypeProperty>
    
    <!-- ============================================ -->
    <!-- RULES (Logic using OWL Restrictions) -->
    <!-- ============================================ -->
    
    <!-- Rule 1: If a food is poisonous, then it is unsafe -->
    <owl:Class>
        <owl:intersectionOf rdf:parseType="Collection">
            <rdf:Description rdf:about="http://example.org/food#Food"/>
            <owl:Restriction>
                <owl:onProperty rdf:resource="http://example.org/food#isPoisonous"/>
                <owl:hasValue rdf:datatype="http://www.w3.org/2001/XMLSchema#boolean">true</owl:hasValue>
            </owl:Restriction>
        </owl:intersectionOf>
        <rdfs:subClassOf rdf:resource="http://example.org/food#UnsafeFood"/>
    </owl:Class>
    
    <!-- Rule 2: If a food is smelly, then it is unsafe -->
    <owl:Class>
        <owl:intersectionOf rdf:parseType="Collection">
            <rdf:Description rdf:about="http://example.org/food#Food"/>
            <owl:Restriction>
                <owl:onProperty rdf:resource="http://example.org/food#isSmelly"/>
                <owl:hasValue rdf:datatype="http://www.w3.org/2001/XMLSchema#boolean">true</owl:hasValue>
            </owl:Restriction>
        </owl:intersectionOf>
        <rdfs:subClassOf rdf:resource="http://example.org/food#UnsafeFood"/>
    </owl:Class>
    
    <!-- ============================================ -->
    <!-- DATA (Actual Facts - Instances) -->
    <!-- ============================================ -->
    
    <!-- Instance 1: A specific mushroom -->
    <Mushroom rdf:about="http://example.org/food#mushroom1">
        <rdfs:label>Mushroom 1</rdfs:label>
        <isPoisonous rdf:datatype="http://www.w3.org/2001/XMLSchema#boolean">true</isPoisonous>
    </Mushroom>
    
    <!-- Instance 2: A specific meat -->
    <Meat rdf:about="http://example.org/food#meat1">
        <rdfs:label>Meat 1</rdfs:label>
        <isSmelly rdf:datatype="http://www.w3.org/2001/XMLSchema#boolean">true</isSmelly>
    </Meat>
    
    <!-- Instance 3: A safe apple (for comparison) -->
    <Food rdf:about="http://example.org/food#apple1">
        <rdfs:label>Apple 1</rdfs:label>
        <isPoisonous rdf:datatype="http://www.w3.org/2001/XMLSchema#boolean">false</isPoisonous>
        <isSmelly rdf:datatype="http://www.w3.org/2001/XMLSchema#boolean">false</isSmelly>
    </Food>
    
</rdf:RDF>
